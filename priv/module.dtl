<html>
  <head>
    <title>{{ module.name }} - {{ application }} {{ version }}</title>
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <script src="js/main.js"></script>
  </head>
  <body>
    {{ sidenav|safe }}
    <div id="main" class="nav">
      <span id="show-nav-button" onclick="openNav()">&#9776;</span>
      <div id="content">
        <h1>{{ module.name }}</h1>
        {% if module.description != "none" %}
        <p>{{ module.description }}</p>
        {% endif %}

        <!------- Summary ------->
        <h1>Summary</h1>
        <!------- Types summary ------->
        <h2>Types</h2>
        {% for type in module.types %}
        <ul>
          <li>
            <a href="#{{ type.name }}-{{ type.arity }}">{{ type.name }}()</a>
          </li>
        </ul>
        {% endfor %}

        <!------- Functions summary ------->
        <h2>Functions</h2>
        {% for function in module.functions %}
        <ul>
          <li>
            <a href="#{{ function.name }}-{{ function.arity }}">
              {{ function.name }}({% for arg in function.args %}{{ arg.name }}{% if not forloop.last %}, {% endif %}{% endfor %})
            </a>
          </li>
        </ul>
        {% endfor %}

        <!------- Types details ------->
        <h1>Types</h1>
        {% for type in module.types %}
        <h3>
          <a id="{{ type.name }}-{{ type.arity }}" href="#{{ type.name }}-{{ type.arity }}">
            {{ type.name }}()
          </a>
          {% if type.description != "none" %}
          <pre>{{ type.description|safe }}</pre>
          {% endif %}
        </h3>
        {% endfor %}

        <!------- Functions details ------->
        <h1>Functions</h1>
        {% for function in module.functions %}
        <h3>
          <a id="{{ function.name }}-{{ function.arity }}" href="#{{ function.name }}-{{ function.arity }}">
            {{ function.name }}({% for arg in function.args %}{{ arg.name }}{% if not forloop.last %}, {% endif %}{% endfor %})
          </a>
          {% if function.spec != "none" %}
          <pre>{{ function.spec }}</pre>
          {% endif %}
        </h3>
        {% if function.description != "none" %}
        <p>{{ function.description|safe }}</p>
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </body>
</html>
